<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/background"
    tools:context=".AddActivity" >

    <TextView
        android:id="@+id/cb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:text="Calories Burned" />
	<RelativeLayout
	    android:id="@+id/toplayer"
	    android:layout_width="match_parent"
	    android:layout_below="@+id/cb_title"
	    android:layout_height="70dip"
	    android:gravity="center_vertical" >

	    <ImageView
	        android:id="@+id/cb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxHeight="65dip"
	        android:maxWidth="65dip"
	        android:paddingLeft="25dip"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ic_cb" />

	    <TextView
	        android:id="@+id/cb_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:paddingRight="15dip"
	        android:layout_centerVertical="true"
	        android:text="00000"
	        android:textSize="40sp" />

	</RelativeLayout>
	
	<LinearLayout
        	android:id="@+id/divider"
        	android:layout_width="fill_parent"
			android:layout_height="0.05dip"
			android:layout_below="@+id/toplayer"
			android:background="#787878" 
			android:orientation="horizontal"/>
	
	 <TextView
        android:id="@+id/timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:text="Duration" />
	 
	<RelativeLayout
	    android:id="@+id/secondlayer"
	    android:layout_width="match_parent"
	    android:layout_height="70dip"
	    android:layout_below="@+id/timer_title"
	    android:gravity="center_vertical" >

	    <ImageView
	        android:id="@+id/timer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxHeight="70dip"
	        android:maxWidth="70dip"
	        android:paddingLeft="23dip"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ic_timer" />

	    <EditText
	        android:id="@+id/timer_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingRight="15dip"
	        android:text="00000"
	        android:textSize="40sp" />

	</RelativeLayout>
	
	<LinearLayout
        	android:id="@+id/divider2"
        	android:layout_width="fill_parent"
			android:layout_height="0.05dip"
			android:layout_below="@+id/secondlayer"
			android:background="#787878" 
			android:orientation="horizontal"/>
	
	<TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:text="Type of Activities" />
	
	<RelativeLayout
	    android:id="@+id/thirdlayer"
	    android:layout_width="match_parent"
	    android:layout_height="70dip"
	    android:layout_below="@+id/activity_title"
	    android:gravity="center_vertical" >

		<ImageView
	        android:id="@+id/activity_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxHeight="70dip"
	        android:maxWidth="70dip"
	        android:paddingLeft="23dip"
	        android:scaleType="fitCenter" />
	    
		<EditText
	        android:id="@+id/activity_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingRight="15dip"
	        android:textSize="40sp" />
		
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/lastlayer"
	    android:layout_width="match_parent"
	    android:layout_height="100dip"
	   	android:layout_below="@+id/thirdlayer"
	   	android:layout_marginTop="20dip"
	    android:gravity="center_vertical" >
		<ImageButton
	   		android:id="@+id/start_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerHorizontal="true"
	    	android:adjustViewBounds="true"
	    	android:maxWidth="160dip"
	    	android:maxHeight="160dip"
	    	android:background="@null"
	    	android:scaleType="fitCenter"
	    	android:src="@drawable/start_button_ani" />
	</RelativeLayout>

</RelativeLayout>
