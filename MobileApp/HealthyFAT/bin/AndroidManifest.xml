<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyfat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.healthyfat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.healthyfat.PreLoginActivity"
            android:label="@string/title_activity_pre_login" >
        </activity>
        <activity
            android:name="com.healthyfat.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.healthyfat.PreLoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.healthyfat.PreLoginActivity" />
        </activity>
        <activity
            android:name="com.healthyfat.PreMainActivity"
            android:label="@string/title_activity_pre_main" >
        </activity>
        <activity
            android:name="com.healthyfat.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName="com.healthyfat.PreLoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.healthyfat.PreLoginActivity" />
        </activity>
    </application>

</manifest>
